{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": ["esnext", "dom"],
      "types": [
        "vue",
        "@types/node", 
        "@types/ziggy-js",
        "vite/client",
        "@inertiajs/vue3",
  ],
      "paths": {
        "@/*": ["./resources/js/*"]
      },
      "outDir": "./public/build/assets"
    },
    "typeRoots": ["./node_modules/@types", "resources/js/types"],
    "include": [
      "./**/*.ts",
      "./**/*.d.ts",
      "./**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
  }